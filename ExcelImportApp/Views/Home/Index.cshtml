@model IEnumerable<Table1>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    th {
        font-size: smaller;
    }

    hr {
        border: 4px solid black;
    }

    h2, h3 {
        font-style: italic;
        text-shadow: 5px 5px 10px #000;
    }
</style>
<hr />
<div class="container">
    <h2 class="text-center">Import Data Page 2</h2>
    <hr />

    <form asp-action="Import" method="post" enctype="multipart/form-data" class="bg-white border p-2">
        <div class="row p-2">
            <div class="col-md-3">
                <label class="form-label fw-bolder">File (.xlsx)</label>
                <input type="file" name="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" class="form-control" required oninvalid="this.setCustomValidity('Please Upload a .xlsx file')" />
            </div>
        </div>
        <div class="col-md-3 p-2">
            <button type="submit" class="btn btn-outline-primary">Upload</button>
        </div>
    </form>

    <hr />
</div>
@if (Model != null && Model.Any())
{
    <div class="mt-2">

        <h3 class="text-center">Imported Data</h3>
        <hr />
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered align-content-between">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>DOB</th>
                        <th>Is Injured</th>
                        <th>Education</th>
                        <th>Occupation</th>
                        <th>Relation</th>
                        <th>Relation DOB</th>
                        <th>Index</th>
                        <th>Parent Table Name</th>
                        <th>Parent Index</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FullName</td>
                            <td>@item.DOB</td>
                            <td>@item.IsInjured</td>
                            <td>@item.Education</td>
                            <td>@item.Occupation</td>
                            <td>@item.Relation</td>
                            <td>@item.RelationDOB</td>
                            <td>@item.Index</td>
                            <td>@item.ParentTableName</td>
                            <td>@item.ParentIndex</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}


<link href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/2.0.8/js/dataTables.js"></script>

<script>
    new DataTable('#example');
</script>